<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Location">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showAddLocation" text="Add Location" />
                  <MenuItem mnemonicParsing="false" onAction="#showViewUpdateDeleteLocation" text="Manage Location" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Employees">
            <items>
              <MenuItem mnemonicParsing="false" text="Add Employee" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Logout">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
               </items></Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <Label fx:id="welcome_msg" alignment="CENTER" prefWidth="100.0" wrapText="true" BorderPane.alignment="TOP_RIGHT" />
   </left>
</BorderPane>
